{
	"name": "laravel/laravel",
	"description": "The Laravel Framework.",
	"keywords": ["framework", "laravel"],
	"license": "MIT",
	"require": {
		"laravel/framework": "4.1.*",
        "doctrine/dbal" : "@dev",
		"pda/pheanstalk": "dev-master",
        "frozennode/administrator": "dev-master",
        "cartalyst/sentry": "2.1.*"
	},
    "require-dev": {
        "mockery/mockery": "dev-master@dev"
    },
	"autoload": {
		"classmap": [
			"app/commands",
			"app/database/migrations",
			"app/database/seeds",
			"app/tests/TestCase.php"
		],
        "psr-0": {
            "MissionNext": "app/library"
        },
        "psr-4": {
            "MissionNext\\Repos\\": "app/repos",
            "MissionNext\\Models\\": "app/models",
            "MissionNext\\Validators\\": "app/validators",
            "MissionNext\\Controllers\\": "app/controllers"
        }
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize",
            "php artisan asset:publish frozennode/administrator"
		],
		"post-update-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize",
            "php artisan asset:publish frozennode/administrator"
		],
		"post-create-project-cmd": [
			"php artisan key:generate"
		]
	},
	"config": {
		"preferred-install": "dist"
	},
	"minimum-stability": "stable"
}
